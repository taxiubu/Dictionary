<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".View.TranslatorActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/toolBarTrans"
            android:background="@color/colorToolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp">
            <ImageView
                android:layout_marginLeft="@dimen/_5sdp"
                android:background="@drawable/ic_keyboard_backspace_white_24dp"
                android:layout_centerVertical="true"
                android:id="@+id/btBack"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"/>
            <TextView
                android:layout_centerInParent="true"
                android:textSize="@dimen/_20sdp"
                android:textColor="@color/colorWhite"
                android:text="Dịch nghĩa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <TextView
            android:textStyle="bold"
            android:id="@+id/tvTop"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:textSize="@dimen/_20sdp"
            android:textColor="@color/colorBlack"
            android:layout_below="@+id/toolBarTrans"
            android:text="Tiếng anh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvBot"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:textSize="@dimen/_15sdp"
            android:textColor="@color/colorBlack"
            android:layout_below="@+id/tvTop"
            android:text="Tiếng anh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</layout>